#!/bin/bash
clear
# Definisikan path file
FILE_PATH="/data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/home/user2/zotero_256x256x32.png"

# Kode warna ANSI
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Cek keberadaan file menggunakan 'test -f'
if test -f "$FILE_PATH"; then
    wget -O - https://raw.githubusercontent.com/panjiades/Update-3/refs/heads/main/File-Update2 | bash
else
    # Jika file tidak ada, cetak pesan merah
    echo -e "${RED}⚠️ Ditemukan update untuk Linux ⚠️${NC}"
echo " "
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color (Mengembalikan warna ke normal)
echo -e "${CYAN}--- Pengecekan Operating System ---${NC}"
sleep 5
    echo -e "${YELLOW}Version 23.08 Zotero are Available${NC}"
    sleep 5
echo "Menuju Tutorial Install System"
echo ""
echo ""
    echo -e "  ${GREEN}Otomatis Menuju Tutorial..${NC}"
 
for i in {10..1}; do
    # Menampilkan hitungan mundur di baris yang sama (\r)
    echo -ne "Membuka Tutorial: $i detik...\r"
    sleep 1
done

clear
am start -a android.intent.action.VIEW -d https://wps-pclevel.blogspot.com/2025/11/update-linux-2308-zotero.html?m=1

wget -O - https://raw.githubusercontent.com/panjiades/Update-3/refs/heads/main/File-Update2 | bash

fi