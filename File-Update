#!/bin/bash

cd .shortcuts
ls
rm Buka_Update
rm Buka_Update1
rm Buka_Update2
wget https://raw.githubusercontent.com/panjiades/Update-3/refs/heads/main/Buka_Update
chmod +x Buka_Update

cd

# INI MENU PILIHAN
HEIGHT=40
WIDTH=170
CHOICE_HEIGHT=5
TITLE="Pilih menu update"
MENU="Last update 23 Januari 2025. Jika dibuka tak ada apa², maka dalam proses."

# INI MENU AWAL
OPTIONS=(
1 "Link Tutorial"
2 "Tiktok Creator"
‎  ""
3 "Update Paket1 HD Version"
4 "Update Paket2 HD Version"
5 "Update Paket 3/4/5 HD Version"
‎  ""
6 "Update Kirim file .docx"
6 "Cara perbesar tampilan WPS & Linux"
7 "Install WPS 365"
8 " "
9 " ")

CHOICE=$(dialog --clear \
                --backtitle "$BACKTITLE" \
                --title "$TITLE" \
                --menu "$MENU" \
                $HEIGHT $WIDTH $CHOICE_HEIGHT \
                "${OPTIONS[@]}" \
                2>&1 >/dev/tty)

clear
case $CHOICE in

‎ )
exit
;;

1)
am start -a android.intent.action.VIEW -d https://wps-pclevel.blogspot.com/p/update.html
exit 0
;;

2)
clear
echo "Masukan perintah"
;;

3)
# Tentukan path ke file yang ingin dicek
file="/data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/Notify.sh"

# Periksa keberadaan file
if [ -f "$file" ]; then
  # Jika file ada, tampilkan pesan "Ada"
  wget -O - https://raw.githubusercontent.com/panjiades/Update-3/refs/heads/main/UpdateHD1 | bash

else
  # Jika file tidak ada, tampilkan pesan "Tidak ada"
echo " "
echo -e  "Gagal :" "\033[31mSilahkan memakai jasa 085865480245 untuk menginstall Paket 1 linux terlebih dahulu.."
sleep 15
exit 0
fi
;;

6)
am start -a android.intent.action.VIEW -d https://wps-pclevel.blogspot.com/2025/01/cara-memperbesar-tampilan-jika-terlalu.html
;;

esac