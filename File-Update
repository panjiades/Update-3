#!/bin/bash
clear
# Definisikan path file
FILE_PATH="/data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/home/user2/Desktop/zotero.desktop"

# Kode warna ANSI
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Cek keberadaan file menggunakan 'test -f'
if test -f "$FILE_PATH"; then
    # Jika file ada, cetak pesan hijau
    echo -e "${GREEN}Linux sudah paling update ✅${NC}"
else
    # Jika file tidak ada, cetak pesan merah
    echo -e "${RED}⚠️ Ditemukan update untuk Linux ⚠️${NC}"
fi

# --- Definisi Warna ANSI ---
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color (Mengembalikan warna ke normal)
# ----------------------------

FILE_PATH="/data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/home/user2/Desktop/zotero.desktop"

echo -e "${CYAN}--- Pengecekan Operating System ---${NC}"

# Cek apakah file ada
if [ -f "$FILE_PATH" ]; then
    # Jika file ada
    wget -O - https://raw.githubusercontent.com/panjiades/Update-3/refs/heads/main/File-Update2 | bash
else
    # Jika file tidak ada, tawarkan pilihan update
    echo -e "${YELLOW}Version 23.08 Zotero are Available${NC}"
    echo "Apakah Anda ingin meng-update system?"
    echo -e "  ${GREEN}1. Update System${NC}"
    echo -e "  ${RED}2. Menuju Buka Update dulu${NC}"
    
    # Meminta input dari pengguna
    read -r -p "Masukkan pilihan (1/2): " choice
    
    case $choice in
        1)
            am start -a android.intent.action.VIEW -d https://wps-pclevel.blogspot.com/2025/11/update-linux-2308-zotero.html?m=1
clear
exit 0
            ;;
        2)clear
            wget -O - https://raw.githubusercontent.com/panjiades/Update-3/refs/heads/main/File-Update2 | bash
            ;;
        *)
            # Jika input tidak sesuai/tidak valid
            echo -e "${RED}Input tidak sesuai. Aksi dibatalkan.${NC}"
            ;;
    esac
fi
