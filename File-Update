#!/bin/bash

HEIGHT=15
WIDTH=40
CHOICE_HEIGHT=4
BACKTITLE="Menu update"
TITLE="Pilih menu"
MENU="Last update 20 Januari 2025:"

OPTIONS=(
1 "Tutorial"
2 "Buka Web Tutorial"
3 "Cooming Soon"
4 "Cooming Soon"
5 "Install WPS 365"
6 "Install WPS 2019"
7 "Cooming soon")

CHOICE=$(dialog --clear \
                --backtitle "$BACKTITLE" \
                --title "$TITLE" \
                --menu "$MENU" \
                $HEIGHT $WIDTH $CHOICE_HEIGHT \
                "${OPTIONS[@]}" \
                2>&1 >/dev/tty)

clear
case $CHOICE in
        1)
for i in {7..1}; do
  echo "BELUM TERSEDIA DALAM PENGEMBANGAN - keluar dalam $i detik"
  sleep 1
done
echo "Keluar..."
exit 0
;;

        2)
for i in {7..1}; do
  echo "BELUM TERSEDIA DALAM PENGEMBANGAN - keluar dalam $i detik"
  sleep 1
done
echo "Keluar..."
exit 0
;;
        3)
            for i in {7..1}; do
  echo "BELUM TERSEDIA DALAM PENGEMBANGAN - keluar dalam $i detik"
  sleep 1
done
echo "Keluar..."
exit 0
;;
esac

