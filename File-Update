#!/bin/bash

HEIGHT=15
WIDTH=40
CHOICE_HEIGHT=4
BACKTITLE="Update sedang pengembangan"
TITLE="Pilih menu"
MENU="Last update 20 Januari 2025:"

#INI_MENU_AWAL
OPTIONS=(
1 "Link Tutorial"
2 "Install Sudo"
3 "Cooming Soon"
4 "Cooming Soon"
5 "Install WPS 365"
6 "Install WPS 2019"
7 "Cooming soon")

CHOICE=$(dialog --clear \
                --backtitle "$BACKTITLE" \
                --title "$TITLE" \
                --menu "$MENU" \
                $HEIGHT $WIDTH $CHOICE_HEIGHT \
                "${OPTIONS[@]}" \
                2>&1 >/dev/tty)

clear
case $CHOICE in
        1)
am start -a android.intent.action.VIEW -d https://wps-pclevel.blogspot.com/p/update.html?m=1
exit 0
;;

        2)
clear
echo Masukan perintah
;;
        3)
            for i in {7..1}; do
  echo "BELUM TERSEDIA DALAM PENGEMBANGAN - keluar dalam $i detik"
  sleep 1
done
echo "Keluar..."
exit 0
;;
esac

